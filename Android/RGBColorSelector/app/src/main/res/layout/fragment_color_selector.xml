<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ColorSelector"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="15sp"
        android:text="@string/insert_or_choose_values_for_red_green_and_blue_to_create_your_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Red"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Red"
            android:layout_marginStart="10dp"
            android:value="0"
            android:layout_weight="1"
            android:stepSize="1.0"
            android:layout_gravity="center_vertical"
            android:valueFrom="@string/MinValue"
            android:valueTo="@string/MaxValue" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtInputRed"
                android:hint=""
                android:inputType="number"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Green"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Red"
            android:layout_marginStart="10dp"
            android:value="0"
            android:stepSize="1.0"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:valueFrom="@string/MinValue"
            android:valueTo="@string/MaxValue" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtInputGreen"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Red"
            android:layout_marginStart="10dp"
            android:stepSize="1.0"
            android:value="0"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:valueFrom="@string/MinValue"
            android:valueTo="@string/MaxValue" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtInputBlue"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</LinearLayout>