<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lista.view.JokeFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgJoke"
                android:layout_width="@dimen/dimen_image_size_100"
                android:layout_height="@dimen/dimen_image_size_100"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/dimen_image_margin_100"
                tools:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/chuck_norris_icon" />

            <TextView
                android:id="@+id/txtJoke"
                tools:text="@string/test_text"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_margin_30"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_text_size_24"/>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>